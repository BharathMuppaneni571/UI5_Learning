<mvc:View controllerName="day5.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<HBox justifyContent="Center">
					<VBox width="50%">
					<Input id="idUsername" value="" placeholder="User Name"/>
					<Input id="idPassword" type="Password" value="" placeholder="Password"/>
					<Button text="Login" press="loginPressed"/>
					</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>