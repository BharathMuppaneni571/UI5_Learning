<mvc:View controllerName="day6.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<HBox justifyContent="Center">
						<VBox width="50%">
							<Input id="idUsername" value="{/name}" placeholder="Enter your name"/>
							<Text id="idFinalValue" text="Hi {/name} have a nice day"/>
						</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>