<mvc:View controllerName="day9.controller.View1" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="idView1">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<!--<HBox justifyContent="Center">-->
						<List headerText="Employees" items="{/Employees/}" >
							<StandardListItem title="{FirstName} {LastName}" 
											  description="Title: {Title}, Country: {Country}" 
											  counter="{EmployeeID}"
											  type="Navigation" 
											  press=".onEmployeeItemPressed"/>
						</List>
					<!--</HBox>-->
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>